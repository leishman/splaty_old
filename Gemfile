gem 'rake'

gem 'shotgun'
gem 'rack-flash3'

group :test, :development do
  gem 'rspec'
  gem 'factory_girl'
  gem 'faker'
end

group :test do
  gem 'rack-test'
  gem 'shoulda-matchers'
end
